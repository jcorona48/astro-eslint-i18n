---
import '@/styles/globals.css';
import Footer from '@/modules/common/components/Footer/index.astro';

interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang={Astro.params.lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | Blog CISC</title>
    </head>
    <body>
        <nav></nav>
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
<style is:global>
    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
            'Helvetica Neue', Arial, sans-serif;
        margin: 0;
        padding: 0;
        width: 100%;
        min-height: 100dvh;
        display: grid;
        grid-template-rows: auto 1fr auto;
    }

    /* Styles for navbar component, add correct styles on the future */

    nav {
        border-bottom: 2px solid hsl(var(--border-navbar));
        color: hsl(var(--dark-foreground));
        padding: 3rem;
        margin-bottom: 40px;
        text-align: center;
        width: 100%;
    }
</style>
